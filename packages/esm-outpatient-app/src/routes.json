{
    "$schema": "https://json.openmrs.org/routes.schema.json",
    "backendDependencies": {
        "fhir2": "^1.2.0",
        "webservices.rest": "^2.24.0"
    },
    "pages": [],
    "extensions": [

        {
            "component": "opdDashboardGroup",
            "name": "opd-dashboard",
            "slot": "patient-chart-dashboard-slot",
            "meta": {
                "title": "General",
                "slotName": "opd-dashboard-slot"
            }
        },
        {
            "component": "opdTestingDashboardLink",
            "name": "opd-testing",
            "slot": "opd-dashboard-slot", 
              "meta": {
                "slot": "opd_testing-dashboard-slot",
                "title": "Testing",
                "path": "opd-testing",
                "columns": 1
              }
        }, 
        {
            "component": "opdTreatmentDashboardLink",
            "name": "opd-treatment",
            "slot": "opd-dashboard-slot",
            "meta": {
              "slot": "opd-treatment-dashboard-slot",
              "title": "Clinical Form",
              "path": "opd-treatment",
              "columns": 2
            }
        }
    ]
}

{
    "$schema": "https://json.openmrs.org/routes.schema.json",
    "backendDependencies": {
        "fhir2": "^1.2.0",
        "webservices.rest": "^2.24.0"
    },
    "pages": [],
    "extensions": [

        {
            "component": "opdDashboardGroup",
            "name": "opd-dashboard",
            "slot": "patient-chart-dashboard-slot",
            "meta": {
                "title": "General",
                "slotName": "opd-dashboard-slot"
            }
        },
        {
            "component": "opdAssessmentDashboardLink",
            "name": "opd-testing",
            "slot": "opd-dashboard-slot", 
              "meta": {
                "slot": "opd-testing-slot",
                "title": "Clinical Assessment",
                "path": "opd-testing",
                "columns": 1,
                "layoutMode": "anchored"
              }
        }, 
        {
            "name": "testing-summary-ext",
            "slot": "opd-testing-slot",
            "component": "opdAssessDashboardLinkExt"
          },
        {
            "component": "opdTreatmentDashboardLink",
            "name": "opd-treatment",
            "slot": "opd-dashboard-slot",
            "meta": {
              "slot": "opd-treatment-slot",
              "title": "Admission",
              "path": "opd-treatment",
              "columns": 1,
              "layoutMode": "anchored"
            }
        },
        {
            "name": "opd-summary-ext",
            "slot": "opd-treatment-slot",
            "component": "opdTestingDashboardLinkExt"
          },
          {
            "component": "opdPalliativeDashboardLink",
            "name": "opd-palliative",
            "slot": "opd-dashboard-slot",
            "meta": {
              "slot": "opd-palliatve-slot",
              "title": "Palliative Care",
              "path": "opd-palliative",
              "columns": 1,
              "layoutMode": "anchored"
            }
        },
        {
            "name": "opd-palliatve-ext",
            "slot": "opd-palliatve-slot",
            "component": "opdPalliativeDashboardLinkExt"
          }
    ]
}

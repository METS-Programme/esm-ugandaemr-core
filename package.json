{
  "name": "@ugandaemr/esm-ugandaemr-app",
  "version": "0.1.0",
  "license": "MPL-2.0",
  "description": "A microfrontend for UgandaEMR built on top of OpenMRS 3.x with some components of OHRI",
  "browser": "dist/esm-ugandaemr-app.js",
  "main": "src/index.ts",
  "source": true,
  "scripts": {
    "start": "openmrs develop",
    "serve": "webpack serve --mode=development",
    "build": "webpack --mode production",
    "analyze": "webpack --mode=production --env.analyze=true",
    "lint": "eslint src --ext js,jsx,ts,tsx",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typescript": "tsc",
    "test": "jest --config jest.config.json",
    "verify": "concurrently 'yarn:lint' 'yarn:test --passWithNoTests'",
    "coverage": "yarn test -- --coverage --passWithNoTests",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn verify"
    }
  },
  "browserslist": [
    "extends browserslist-config-openmrs"
  ],
  "keywords": [
    "openmrs",
    "microfrontends",
    "ugandaEMR",
    "ugandaemr"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/METS-Programme/esm-ugandaemr-core.git"
  },
  "homepage": "https://github.com/METS-Programme/esm-ugandaemr-core#readme",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/METS-Programme/esm-ugandaemr-core/issues"
  },
  "dependencies": {
    "@carbon/icons-react": "^11.10.0",
    "@ohri/openmrs-esm-ohri-commons-lib": "next",
    "carbon-components-react": "^8.15.0",
    "lodash-es": "^4.17.15"
  },
  "peerDependencies": {
    "@ohri/openmrs-ohri-form-engine-lib": "next",
    "@openmrs/esm-framework": "^4.0.3-pre.371",
    "carbon-components": "10.58.3",
    "carbon-icons": "7.0.7",
    "dayjs": "1.x",
    "react": "18.2.0",
    "react-i18next": "11.18.6",
    "react-router-dom": "6.4.2",
    "rxjs": "6.x"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime": "^7.14.0",
    "@openmrs/esm-framework": "^4.0.3-pre.371",
    "@openmrs/esm-patient-common-lib": "^4.0.1-pre.435",
    "@testing-library/dom": "^7.31.2",
    "@testing-library/jest-dom": "^5.13.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.1.9",
    "@types/carbon-components-react": "^7.55.2",
    "@types/carbon__icons-react": "^11.10.0",
    "@types/jest": "^26.0.23",
    "@types/react": "^18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/react-router": "^5.1.19",
    "@types/react-router-dom": "^5.3.3",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/parser": "^5.14.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.2",
    "babel-preset-minify": "^0.5.1",
    "concurrently": "^6.2.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "file-loader": "^6.2.0",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.4",
    "jest-cli": "^27.0.4",
    "openmrs": "^4.0.3-pre.371",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^11.18.6",
    "react-router-dom": "^6.4.2",
    "rxjs": "^6.5.4",
    "typescript": "^4.3.2"
  },
  "resolutions": {
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6"
  }
}

{
  "name": "@ugandaemr/esm-ugandaemr-core",
  "private": true,
  "description": "Microfrontends for UgandaEMR built on top of OpenMRS 3.x and some components of OHRI",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "openmrs develop --backend http://localhost:8080 --sources 'packages/esm-*-app'",
    "ci:publish": "lerna publish from-package --yes",
    "ci:prepublish": "lerna publish from-package --no-git-reset --yes --dist-tag next",
    "release": "lerna version --no-git-tag-version",
    "verify": "turbo run lint && turbo run typescript",
    "prettier": "prettier --config prettier.config.js --write \"packages/**/*.{ts,tsx,css,scss}\"",
    "test": "cross-env TZ=UTC jest --config jest.config.json --verbose false --passWithNoTests",
    "test-watch": "cross-env TZ=UTC jest --watch --config jest.config.json",
    "coverage": "yarn test --coverage",
    "prepare": "husky install",
    "extract-translations": "lerna run extract-translations -- --config ../../tools/i18next-parser.config.js"
  },
  "dependencies": {
    "@openmrs/esm-styleguide": "^5.1.0",
    "@openmrs/openmrs-form-engine-lib": "next",
    "@types/base-64": "^1.0.0",
    "axios": "^1.4.0",
    "base-64": "^1.0.0",
    "buffer": "^6.0.3",
    "dayjs": "^1.11.6",
    "swr": "^2.1.1"
  },
  "peerDependencies": {
    "@openmrs/openmrs-form-engine-lib": "1.x"
  },
  "devDependencies": {
    "@carbon/react": "^1.14.0",
    "@ohri/openmrs-esm-ohri-commons-lib": "next",
    "@openmrs/esm-framework": "next",
    "@openmrs/esm-patient-common-lib": "next",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.6",
    "@swc/jest": "^0.2.23",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^28.1.4",
    "@types/lodash-es": "^4.17.3",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.4",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "i18next": "^19.7.0",
    "i18next-parser": "^5.4.0",
    "identity-obj-proxy": "^3.0.0",
    "install-peers": "^1.0.4",
    "jest": "^28.1.2",
    "jest-cli": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "lerna": "^5.6.1",
    "lodash": "^4.17.21",
    "openmrs": "next",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^11.18.6",
    "react-router-dom": "^6.3.0",
    "rxjs": "^6.6.3",
    "sass": "^1.54.3",
    "swc-loader": "^0.2.3",
    "systemjs-webpack-interop": "^2.3.7",
    "turbo": "^1.6.2",
    "typescript": "^5.0.2",
    "webpack": "^5.83.1",
    "webpack-cli": "^4.10.0"
  },
  "packageManager": "yarn@3.2.4"
}
